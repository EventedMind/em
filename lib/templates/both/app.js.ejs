/*****************************************************************************/
/* App: The Global Application Namespace */
/*****************************************************************************/
App = {
  name: 'My App',
  title: {
    set: function (title, append) {
      document.title = title;
      if (append != false) {
        document.title = App.name + ' - ' + title;
      }
    },
    reset: function () {
      document.title = App.name;
    }
  }
};

Package.describe
  name: '<%= name %>'
  summary: '<%= summary %>'

Package.on_use (api) ->
  ### 
    Use or imply other packages.

    Example:
     api.use 'ui', 'client'
     api.use 'iron-router', ['client', 'server']
  ### 

  ###
     Add files that should be used with this
     package.
  ###
   api.use 'coffee'
   api.add_files '<%= name %>.coffee', ['client', 'server']

  ###
    Export global symbols.
   
    Example:
     api.export 'GlobalSymbol'
  ###

Package.on_test (api) ->
  api.use '<%= name %>'
  api.use 'tinytest'
  
  api.add_files '<%= name %>_tests.js'
